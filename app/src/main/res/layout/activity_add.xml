<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.shee0058.doorsopenottawa.AddActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/building_name_editText"
        android:hint="Building Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Address"
        android:ems="10"
        android:layout_below="@+id/building_name_editText"
        android:layout_alignStart="@+id/building_name_editText"
        android:layout_marginTop="31dp"
        android:id="@+id/building_address_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Description"
        android:ems="10"
        android:layout_below="@+id/building_address_editText"
        android:layout_alignEnd="@+id/building_address_editText"
        android:layout_marginTop="38dp"
        android:id="@+id/building_description_editText" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageButton
        android:src="@android:drawable/ic_menu_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/building_description_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/cameraBtn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="photo"/>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/cancelBtn"
        android:layout_below="@+id/addBtn"
        android:layout_alignStart="@+id/addBtn"
        android:layout_alignEnd="@+id/building_description_editText" />

    <Button
        android:text="Add Building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/addBtn"
        android:layout_below="@+id/progressBar2"
        android:layout_alignStart="@+id/building_description_editText"
        android:layout_alignEnd="@+id/building_description_editText" />

</RelativeLayout>
