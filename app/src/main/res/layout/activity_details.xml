<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".DetailsActivity"
    android:background="@color/colorPrimaryLight">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        tools:context="com.algonquincollege.shee0058.doorsopenottawa.DetailsActivity" />

    <TextView
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/building_name_placeholder"
        android:layout_below="@id/map"
        android:textSize="25sp"
        android:textColor="#000"/>
    <TextView
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/building_address_placeholder"
        android:layout_below="@id/nameTextView"
        android:textSize="20sp"/>
    <TextView
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/building_description_placeholder"
        android:layout_below="@id/addressTextView"
        android:textSize="20sp"/>
</RelativeLayout>
